@model IEnumerable<Post>

@{
    ViewData["Title"] = "All Posts";
}

<h2>Tất cả các bài viết</h2>

<!-- Hiển thị danh sách các bài đăng -->
<div class="search-results">
    @if (Model != null && Model.Any())
    {
        <div class="post-grid">
            @foreach (var post in Model)
            {
                 <div class="post-item">
                    <h4>@post.Title</h4>
                    <div class="post-image">
                        <img src="@Url.Content("~")/@post.Thumbnail" alt="@post.Title">
                    </div>
                    <div class="post-content">
                        <span>ID: </span>@Html.Raw(@post.Id) <br/>
                        <span>VerifyKey: </span>@Html.Raw(@post.verifykey) <br/>
                        <span>User ID: </span>@Html.Raw(@post.UserId) <br/>
                        <span>Category ID: </span>@Html.Raw(@post.CategoryId) <br/>
                        <span>Ngày tạo: </span>@Html.Raw(@post.CreatedDate) <br/>
                        <span>View: </span>@Html.Raw(@post.View) <br/>



                        <span>Nội dung: </span>@Html.Raw(@post.Content)
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Không có bài viết nào được tìm thấy.</p>
    }
</div>



